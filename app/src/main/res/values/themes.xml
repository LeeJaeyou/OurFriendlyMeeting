<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OurFriendlyMeeting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500</item> // 상태바 색깔
        <!-- Customize your theme here. -->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item> // 상태바 view

    </style>

    <style name="Theme.OurFriendlyMeeting.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OurFriendlyMeeting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OurFriendlyMeeting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>